<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kumpulan Game</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@700&family=Rajdhani:wght@500&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: #0d0d0d;
            color: #fff;
            font-family: 'Rajdhani', sans-serif;
            overflow-x: hidden;
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 2rem;
            background: #111;
            box-shadow: 0 0 10px #0f0;
        }

        .logo {
            font-family: 'Orbitron', sans-serif;
            font-size: 1.5rem;
            color: #0f0;
            text-shadow: 0 0 10px #0f0;
        }

        .menu {
            display: flex;
            gap: 1.5rem;
        }

        .menu a {
            color: #0f0;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s;
        }

        .menu a:hover {
            color: #fff;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }

        .games-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 2rem;
            padding: 1rem;
        }

        .game-card {
            background: #1a1a1a;
            border: 1px solid #0f03;
            border-radius: 12px;
            padding: 2rem;
            transition: all 0.3s ease;
            cursor: pointer;
            box-shadow: 0 0 10px #0f04;
        }

        .game-card:hover {
            transform: scale(1.05);
            box-shadow: 0 0 25px #0f0;
        }

        .game-card h2 {
            color: #0f0;
            margin-bottom: 1rem;
            font-family: 'Orbitron', sans-serif;
            text-shadow: 0 0 5px #0f0;
        }

        .game-card p {
            color: #ccc;
            margin-bottom: 1rem;
        }

        .game-card .play-btn {
            display: inline-block;
            padding: 0.8rem 2rem;
            font-size: 1rem;
            color: #0f0;
            border: 2px solid #0f0;
            border-radius: 8px;
            text-decoration: none;
            transition: 0.3s;
        }

        .game-card .play-btn:hover {
            background: #0f0;
            color: #000;
            box-shadow: 0 0 20px #0f0;
        }

        footer {
            margin-top: 4rem;
            text-align: center;
            font-size: 0.9rem;
            color: #555;
        }
    </style>
</head>
<body>
    <nav>
        <div class="logo">Online Games</div>
        <div class="menu">
            <a href="/">Home</a>
            <a href="/games">Games</a>
            <a href="/about">About</a>
        </div>
    </nav>

    <div class="container">
        <div class="games-grid">
            <% const games = [
                {
                    title: 'Snake Game',
                    description: 'Game klasik ular yang harus memakan makanan dan tumbuh semakin panjang.',
                    path: '/snake'
                },
                {
                    title: 'Flappy Bird',
                    description: 'Kendalikan burung untuk menghindari pipa-pipa yang menghalangi.',
                    path: '/flappy'
                },
                {
                    title: 'Tetris',
                    description: 'Susun balok-balok yang jatuh untuk membuat garis horizontal.',
                    path: '/tetris'
                },
                {
                    title: 'Puzzle Slide',
                    description: 'Susun gambar dengan menggeser potongan-potongan puzzle.',
                    path: '/puzzle'
                }
            ] %>

            <% games.forEach(game => { %>
                <div class="game-card">
                    <h2><%= game.title %></h2>
                    <p><%= game.description %></p>
                    <a href="<%= game.path %>" class="play-btn">Mainkan</a>
                </div>
            <% }); %>
        </div>
    </div>

    <footer>
        <p>&copy; 2024 Neon Games. All rights reserved.</p>
    </footer>
</body>
</html> 
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Kumpulan Game</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: linear-gradient(to bottom, #0f0f0f, #000000);
      color: #ffffff;
      font-family: 'Inter', sans-serif;
      overflow-x: hidden;
    }

    nav {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 1000;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      background: #111;
      box-shadow: 0 2px 12px rgba(255, 255, 255, 0.05);
    }

    .logo {
      font-weight: 700;
      font-size: 1.5rem;
      color: #ffffff;
    }

    .menu {
      display: flex;
      gap: 1.5rem;
    }

    .menu a {
      color: #bbbbbb;
      text-decoration: none;
      font-weight: 500;
      transition: 0.3s;
    }

    .menu a:hover {
      color: #ffffff;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 7rem 2rem 2rem;
    }

    .games-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      padding: 1rem;
    }

    .game-card {
      background: #1c1c1c;
      border-radius: 16px;
      padding: 2rem;
      box-shadow: 0 4px 20px rgba(255, 255, 255, 0.03);
      transition: transform 0.3s, box-shadow 0.3s;
      border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .game-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 8px 30px rgba(139, 92, 246, 0.3);
    }

    .game-card h2 {
      font-size: 1.3rem;
      font-weight: 600;
      color: #ffffff;
      margin-bottom: 0.8rem;
    }

    .game-card p {
      color: #bbbbbb;
      font-size: 0.95rem;
      margin-bottom: 1.2rem;
      line-height: 1.5;
    }

    .play-btn {
      display: inline-block;
      padding: 0.7rem 1.8rem;
      font-size: 0.95rem;
      font-weight: 600;
      color: #fff;
      border: none;
      border-radius: 10px;
      background: linear-gradient(135deg, #7b2ff7, #f107a3);
      text-decoration: none;
      transition: transform 0.2s, box-shadow 0.3s;
      box-shadow: 0 0 10px rgba(139, 92, 246, 0.3);
    }

    .play-btn:hover {
      transform: scale(1.05);
      box-shadow: 0 0 20px rgba(241, 7, 163, 0.5);
    }

    footer {
      margin-top: 4rem;
      text-align: center;
      font-size: 0.9rem;
      color: #777;
    }
  </style>
</head>
<body>
  <nav>
    <div class="logo">NEON</div>
    <div class="menu">
      <a href="/">Home</a>
      <a href="/games">Games</a>
      <a href="/about">About</a>
    </div>
  </nav>

  <div class="container">
    <div class="games-grid">
      <% const games = [
        {
          title: 'Color Match',
          description: 'Game klasik ular yang harus memakan makanan dan tumbuh semakin panjang.',
          path: '/clm'
        },
        {
          title: 'Overflowing Palette',
          description: 'Kendalikan burung untuk menghindari pipa-pipa yang menghalangi.',
          path: '/puzzle'
        },
        {
          title: 'Guess Number',
          description: 'Tekan tombol untuk menebak angka yang ditampilkan.',
          path: '/guess-number'
        },
        {
          title: 'Puzzle Slide',
          description: 'Susun gambar dengan menggeser potongan-potongan puzzle.',
          path: '/sliding-puzzle'
        }
      ] %>

      <% games.forEach(game => { %>
        <div class="game-card">
          <h2><%= game.title %></h2>
          <p><%= game.description %></p>
          <a href="<%= game.path %>" class="play-btn">Mainkan</a>
        </div>
      <% }); %>
    </div>
  </div>

  <footer>
    <p>&copy; 2024 Neon Games. All rights reserved.</p>
  </footer>
</body>
</html>

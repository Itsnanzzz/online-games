  </div>
  <script>
    const topGames = document.getElementById('topGames');
    let autoScroll;
    let paused = false;

    function startAutoScroll() {
      autoScroll = setInterval(() => {
        if (!paused) {
          topGames.scrollBy({ left: 1, behavior: 'smooth' });
          if (topGames.scrollLeft + topGames.clientWidth >= topGames.scrollWidth - 1) {
            topGames.scrollTo({ left: 0, behavior: 'smooth' });
          }
        }
      }, 30);
    }

    topGames.addEventListener('mouseover', () => paused = true);
    topGames.addEventListener('mouseout', () => paused = false);
    topGames.addEventListener('click', () => {
      paused = true;
      clearInterval(autoScroll);
      setTimeout(() => {
        paused = false;
        startAutoScroll();
      }, 7000);
    });

    startAutoScroll();
  </script>
</body>
</html>
